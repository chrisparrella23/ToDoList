<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="sidenav">
  <a href="/">Today</a>
  <% existingLists.forEach(function(listItem) { %>
    <a href="/<%= listItem.name %>"> <%= listItem.name %> </a>
  <% }); %>

  <form class="" action="/listRedirect" method="post">
    <input class="listInput" type="text" name="newListName" placeholder="Make a New List" autocomplete="off">
    <button class="listButton" type="submit" name="newList" value="">Add List</button>
  </form>
</div>

<div class="box" id="">

  <% newListItems.forEach(function(item) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
      <p> <%= item.name %> </p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>">
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>

<%- include("footer") -%>
